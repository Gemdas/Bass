{{!-- this will have a page that can be used for admins and users --}}
{{!-- edit their profile information --}}
{{!-- iterate and create a table blank, once the table loads, go through jQuery (ajax) through the day with a get request on that day --}}
{{!-- javascript --}}
<script src="../assets/js/teetime.js"></script>
<div class="container">
	<div id="edit">
	<a href='/account/{{id}}'>Edit Profile</a>
</div>
<br>

<div class='row'>
	<div id="days" class='col-sm-12 align-self-center text-center'>
		<button class="btn btn-success btn-sm center-block" type="submit">
			<a href="/teetime/monday">Monday</a>
		</button> 
		<button class="btn btn-success btn-sm center-block" type="submit">
			<a href="/teetime/tuesday">Tuesday</a>
		</button> 
		<button class="btn btn-success btn-sm center-block" type="submit">
			<a href="/teetime/wednesday">Wednesday</a>
		</button>
		<button class="btn btn-success btn-sm center-block" type="submit">
			<a href="/teetime/thursday">Thursday</a>
		</button> 
		<button class="btn btn-success btn-sm center-block" type="submit">
			<a href="/teetime/friday">Friday</a>
		</button> 
		<button class="btn btn-success btn-sm center-block" type="submit">
			<a href="/teetime/saturday">Saturday</a>
		</button> 
		<button class="btn btn-success btn-sm center-block" type="submit">
			<a href="/teetime/sunday">Sunday</a>
		</button>
	</div>
</div>
<br>

<div class='header'>
	<div class="row">
		<div class="col-sm-12">
			{{!-- {{#each User}} --}}
			<h1>Hello</h1>
			<h2 id="day" data-day={{this.weekday}}>Select a tee time for {{this.weekday}}</h2>
			{{!-- {{/each}} --}}
		</div>
	</div>
</div>


<br>

<div id="teetimes" class="row">
	<div class="col-sm-12">
		<table class="table">
		  <thead>
		    <tr>
		      <th scope="col">Time</th>
		      <th scope="col">Player 1</th>
		      <th scope="col">Player 2</th>
		      <th scope="col">Player 3</th>
		      <th scope="col">Player 4</th>
		    </tr>
		  </thead>
		  <tbody>

			{{#if this.isOpen}}
		  	{{#each times}}
		    	<tr scope="row">
		    		<td>
		    			{{this.displayTime}}
		    		</td>
		    		<td>
		    			{{!-- will be passed an obj with isOpen.  This will have an object holding the day.  the object is holding an array of iterated times.  those times need to be displayed --}}
		    			<p class="player1 {{this.dataTime}}">
		    				
		    			</p>

		    		</td>
		    		<td>
		    			<p class="player2 {{this.dataTime}}">
		    				
		    			</p>
		    		</td>
		    		<td>
		    			<p class="player3 {{this.dataTime}}">
		    				
		    			</p>
		    		</td>
		    		<td>
		    			<p class="player4 {{this.dataTime}}">
		    				
		    			</p>
		    		</td>	
		    		<td>
		    			{{!-- I have to get an index from handlebars to this form.  That will store the date and time on the click --}}
			    		<span class="input-group-btn">
							<button class="btn btn-success submit" data-time="{{this.dataTime}}" type="submit">Book Now!
							</button>
			    		</span>
		    		</td>
		    	</tr>	 
		    {{/each}}
		    {{/if}}
			{{!-- possible display for looping over handlebars --}}
		    {{!-- {{#teetimes 10}}
				<span>{{this}}</span>
		    {{/teetimes}} --}}
		  </tbody>
		</table>
	</div>
</div>

<br>
<br>

{{!-- module that appears when the button "form" has been selected --}}
<div class="row">
	<div id="form" class="col-sm-12">
		<div class="form-group">
		    <label for="input">Player 1</label>
		    <input type="input" class="form-control" id="p1" placeholder="Last Name">
  		</div>
		<div class="form-group">
		    <label for="input">Player 2</label>
		    <input type="input" class="form-control" id="p2" placeholder="Last Name">
  		</div>
		<div class="form-group">
		    <label for="input">Player 3</label>
		    <input type="input" class="form-control" id="p3" placeholder="Last Name">
  		</div>
		<div class="form-group">
		    <label for="input">Player 4</label>
		    <input type="input" class="form-control" id="p4" placeholder="Last Name">
  		</div>

		{{!-- submit button for form --}}
		<button type="submit" id="group" class="btn btn-primary">Submit</button>
	</div>
</div>


</div>



